<script >
  
_.templateSettings = {
  interpolate: /\{\{(.+?)\}\}/g
}

var display_category = function(category_name){
  var button = ["<button>"];
  var $template = _.template($('#cat_template').html());
  var $htmlOutput = $template({
    name: category_name
   });
  $('#output').append($htmlOutput);
}


var options = {
  url: 'http://localhost:3000/api/categories',
  type: 'get',
  dataType: 'json'
}

$.ajax(options).done(function(data){
  console.log(data);
  _.each(data, function(category, index){
    var category_name = category.name;
     display_category(category_name)

  });
  
});
  
</script>
